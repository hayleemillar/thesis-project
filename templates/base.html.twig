{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}roots{% endblock %}</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/" style="color:#D36135;">roots</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          {# <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li> #}
          <li class="nav-item">
            <a class="nav-link" href="{{ path('text') }}">text</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('audio') }}">audio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('video') }}">video</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('all') }}">all</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('about') }}">about</a>
          </li>
        </ul>
        {# <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form> #}
        <ul class="navbar-nav">
          {% if app.user %}
          <li><a class="nav-link" href="{{ path('profile') }}">profile</a></li>
          <li>
          <li><a class="nav-link" href="{{ path('app_logout') }}">logout</a></li>
          
          {% else %}
          <li><a class="nav-link" href="{{ path('app_login') }}">login</a></li>
          <li>
            <a class="nav-link" href="{{ path('registration') }}">register</a>
          </li>
          {% endif %}
        </ul>

      </div>
    </nav>
    {% block body %}
    {% endblock %} 

    <!-- Footer -->
    <hr class="mx-auto w-75">
    <footer class="text-center text-lg-start">
      <!-- Grid container -->
      <div class="container p-4">
        <!--Grid row-->
        <div class="row">
          <!--Grid column-->
          <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
            <h5 class="text-uppercase">Welcome</h5>

            <p>
              You're currently viewing a prototype of Roots, a platform designed as part of an undergraduate thesis at NCF, developed by Haylee Millar.
            </p>
          </div>
          <!--Grid column-->

          <!--Grid column-->
          <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
            <h5 class="text-uppercase">Company</h5>

            <ul class="list-unstyled mb-0">
              <li>
                <a href="{{ path('about') }}" class="text-dark" style="display:block;">About</a>
                <a href="{{ path('thesis') }}" class="text-dark" style="display:block;" target="_blank">Thesis PDF</a>
                <a href="{{ path('thesis-presentation') }}" class="text-dark" style="display:block;" target="_blank">Thesis Presentation</a>
              </li>
            </ul>
          </div>
          <!--Grid column-->

          <!--Grid column-->
          <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
            <h5 class="text-uppercase">Resources</h5>

            <ul class="list-unstyled mb-0">
              <li>
                <a href="#!" class="text-dark" style="display:block;">How does it work?</a>
                <a href="#!" class="text-dark" style="display:block;">Tutorials</a>
              </li>
            </ul>
          </div>
          <!--Grid column-->
        </div>
        <!--Grid row-->
      </div>
      <!-- Grid container -->

      <!-- Copyright -->
      <div class="text-center p-3">
        &#169; roots <script>document.write(new Date().getFullYear())</script>. All rights reserved.
      </div>
      <!-- Copyright -->
    </footer>

    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </body>
</html>